{% extends 'OrkestraBundle:Admin:base.html.twig' %}

{% block subtitle %}Group Summary{% endblock %}

{% block panel %}
  {{ panel(
    { 'label' : 'Groups', 'icon' : 'icon1819' },
    { 'label' : group },
    { 'label' : 'New Group', 'icon' : 'icon1830', 'link' : path('admin_group_new') }
  ) }}
{% endblock %}

{% block content %}
<h1>Group Summary</h1>

<table class="record-properties">
    <tbody>
        <tr>
            <th>ID:</th>
            <td>{{ group.id }}</td>
        </tr>
        <tr>
            <th>Name:</th>
            <td>{{ group.name }}</td>
        </tr>
        <tr>
            <th>Role:</th>
            <td>{{ group.role }}</td>
        </tr>
        <tr>
            <th>Active?</th>
            <td>{{ group.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Last Modified:</th>
            <td>{{ group.dateModified }}</td>
        </tr>
        <tr>
            <th>Date Created:</th>
            <td>{{ group.dateCreated }}</td>
        </tr>
    </tbody>
</table>

<p class="form-buttons">
  <a href="{{ path('admin_group_edit', { 'id': group.id }) }}">
    <button>Edit</button>
  </a>   
</p>
{% endblock %}