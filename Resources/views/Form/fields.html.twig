{% block tel_widget %}
    {% spaceless %}
        {% set type = type|default('tel') %}
        {{ block('form_widget_simple') }}
    {% endspaceless %}
{% endblock tel_widget %}

{% block time_widget %}
{% spaceless %}
{% if widget == 'single_text' %}
{{ block('form_widget_simple') }}
{% else %}
        <div {{ block('widget_container_attributes') }}>
            {{ form_widget(form.hour, { 'attr': { 'size': '1', 'class' : 'input-mini inline' } }) }}:{{ form_widget(form.minute, { 'attr': { 'size': '1', 'class' : 'input-mini inline' } }) }}{% if with_seconds %}:{{ form_widget(form.second, { 'attr': { 'size': '1', 'class' : 'input-mini' } }) }}{% endif %}
        </div>
{% endif %}
{% endspaceless %}
{% endblock time_widget %}
